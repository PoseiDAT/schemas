{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://poseidat.org/schema/core/measurement/measurement-value.json",
  "title": "Measurement value",
  "description": "The value of a certain type of measurement",
  "properties": {
    "type": {
      "description": "The type of measurement",
      "$ref": "https://poseidat.org/schema/enum/measurement-type.json"
    },
    "position": {
      "description": "A positional measurement",
      "$ref": "https://poseidat.org/schema/core/measurement/position.json"
    },
    "numeric": {
      "description": "A numerical measurement",
      "$ref": "https://poseidat.org/schema/core/measurement/numeric.json"
    },
    "scale": {
      "description": "A scale measurement",
      "$ref": "https://poseidat.org/schema/core/measurement/scale.json"
    }
 },
 "oneOf": [
   { "required": [ "type", "numeric" ] },
   { "required": [ "type", "position" ] },
   { "required": [ "type", "scale" ] }
 ],
  "type": "object",
  "additionalProperties": false
}
